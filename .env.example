# Application settings
APP_NAME="OpenStack VM Lifecycle API"
ENV=development
DEBUG=false

# Database â€” SQLite for local dev, swap for Postgres in production
DATABASE_URL=sqlite+aiosqlite:///./intuitive.db

# Set to false to use the real OpenStack client (requires openstacksdk)
USE_MOCK_OPENSTACK=true

# OpenStack credentials (only needed when USE_MOCK_OPENSTACK=false)
OPENSTACK_AUTH_URL=https://identity.example.com:5000/v3
OPENSTACK_PROJECT_NAME=my-project
OPENSTACK_USERNAME=admin
OPENSTACK_PASSWORD=secret
OPENSTACK_REGION=RegionOne
